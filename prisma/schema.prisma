generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserStatus {
  PENDING
  ACTIVE
  DISABLE
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]

  // ✅ Leads created by this user
  createdLeads Lead[] @relation("CreatedLeads")

  // ✅ Leads assigned to this user
  assignedLeads Lead[] @relation("AssignedLeads")

  status           UserStatus @default(PENDING)
  role             String     @default("user")
  banned           Boolean?   @default(false)
  banReason        String?
  banExpires       DateTime?
  assignedFollowUp FollowUp[] @relation("AssignedFollowUp")
  createdFollowUp  FollowUp[] @relation("createdFollowUp")

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id @default(uuid())
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @default(uuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Lead {
  id     String @id @default(uuid())
  number String @unique // ✅ required

  //TODO: need to add assignee id

  studentName String?
  parentName  String?

  email      String?
  age        Int?
  grade      String?
  gender     Gender?
  schoolName String?
  address    String?
  status     LeadStatus  @default(NEW)
  source     LeadSource?
  branchId   String?

  due_date DateTime?

  // ✅ The user who created the lead
  userId String
  user   User   @relation("CreatedLeads", fields: [userId], references: [id])

  // ✅ The user who is assigned to the lead
  assigneeId String?
  assignee   User?   @relation("AssignedLeads", fields: [assigneeId], references: [id])

  branch Branch? @relation(fields: [branchId], references: [id])

  // Programs as dropdown (array of IDs)
  programs String[]

  followups FollowUp[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  studentId String?
}

model FollowUp {
  id       String         @id @default(uuid())
  due_date DateTime?
  priority Priority
  remark   String?
  status   FollowUpStatus @default(NEW)

  leadId String
  lead   Lead   @relation(fields: [leadId], references: [id])

  userId String
  user   User   @relation("createdFollowUp", fields: [userId], references: [id])

  assigneeId String?
  assignee   User?   @relation("AssignedFollowUp", fields: [assigneeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//!student part started
model Branch {
  id   String @id @default(uuid())
  name String @unique

  programs  BranchProgram[]
  students  Student[]
  createdAt DateTime        @default(now())
  Lead      Lead[]
}

model Program {
  id        String          @id @default(uuid())
  name      String
  branches  BranchProgram[]
  createdAt DateTime        @default(now())
}

model BranchProgram {
  id        String @id @default(uuid())
  branchId  String
  programId String

  branch  Branch  @relation(fields: [branchId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  timetables        TimeTable[]
  StudentEnrollment StudentEnrollment[]

  @@unique([branchId, programId])
}

model TimeTable {
  id              String        @id @default(uuid())
  branchProgramId String
  branchProgram   BranchProgram @relation(fields: [branchProgramId], references: [id], onDelete: Cascade)

  startTime String // "09:00"
  endTime   String // "12:00"
  label     String? // e.g. "Morning", "Afternoon"

  studentSelections StudentEnrollment[]
}

model StudentEnrollment {
  id              String    @id @default(uuid())
  studentId       String
  timeTableId     String
  branchProgramId String
  isActive        Boolean   @default(true)
  enrolledDate    DateTime? @default(now())
  endDate         DateTime?

  branchProgram BranchProgram @relation(fields: [branchProgramId], references: [id], onDelete: Cascade)
  student       Student       @relation(fields: [studentId], references: [id])
  timeTable     TimeTable     @relation(fields: [timeTableId], references: [id], onDelete: Cascade) // need to imporve
  attendance    Attendance[]

  @@unique([studentId, branchProgramId])
}

model Student {
  id              String    @id @default(uuid())
  number          String
  secondaryNumber String
  name            String
  parentName      String
  email           String?
  age             Int
  grade           String
  gender          Gender
  schoolName      String
  address         String
  enrolledDate    DateTime  @default(now())
  isActive        Boolean   @default(true)
  image           String?
  startedDate     DateTime?
  endDate         DateTime?

  // Optional: if you still want to track which lead converted

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  StudentEnrollment StudentEnrollment[]

  Branch   Branch    @relation(fields: [branchId], references: [id])
  branchId String
  Payment  Payment[]
}

model Attendance {
  id     String           @id @default(uuid())
  date   DateTime         @default(now())
  status AttendanceStatus @default(ABSENT)

  studentEnrollmentId String
  studentEnrollment   StudentEnrollment @relation(fields: [studentEnrollmentId], references: [id], onDelete: Cascade)

  @@unique([studentEnrollmentId, date])
}

model Payment {
  id        String  @id @default(uuid())
  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  totalFee              Float
  totalFeeAfterDiscount Float
  taxableAmount         Float
  vatAmount             Float
  paidAmount            Float         @default(0)
  dueAmount             Float         @default(0)
  discountPrice         Float         @default(0)
  lastPaidDate          DateTime?
  paymentStatus         PaymentStatus @default(PENDING)

  classCount Int     @default(0) // tracks classes per cycle (12)
  isRenewed  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PaymentStatus {
  PENDING
  PARTIAL
  PAID
  OVERDUE
}

enum AttendanceStatus {
  PRESENT
  ABSENT
}

enum LeadStatus {
  NEW
  ONGOING
  CRITICAL
  CONVERTED
  LOST
  DEMO
  CALL_NOT_RECEIVED
}

enum FollowUpStatus {
  NEW
  ONGOING
  CRITICAL
  CONVERTED
  LOST
  DEMO
  CALL_NOT_RECEIVED
}

enum CompanyBranch {
  PATAN
  BAUDHA
  BAFAL
}

enum LeadSource {
  REFERRAL
  WALK_IN
  WEBSITE
  FACEBOOK
  WHATSAPP
  INSTAGRAM
  OTHER
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
