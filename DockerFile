# Stage 1: Install dependencies and build the app
FROM node:20-alpine AS builder

# Install necessary packages for Prisma
RUN apk add --no-cache openssl

# Set the working directory
WORKDIR /app

# Copy package manifests first for better caching
COPY package*.json ./

# Install all dependencies for build (includes dev deps like typescript)
RUN npm ci

# Copy Prisma schema and source
COPY prisma ./prisma
COPY src ./src
COPY public ./public
COPY next.config.ts ./next.config.ts
COPY tsconfig.json ./tsconfig.json

# Generate Prisma client during build
RUN npx prisma generate

# Build the Next.js application
RUN npm run build

# Stage 2: Production-ready image
FROM node:20-alpine AS runner

# Install necessary packages for Prisma and healthchecks
RUN apk add --no-cache openssl curl

WORKDIR /app

# Set environment variables for Next.js to run in production mode
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Create a non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy only package manifests and install production deps cleanly
COPY package*.json ./
RUN npm ci --omit=dev

# Copy the build artifacts and necessary files from the builder stage
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/prisma ./prisma
COPY --from=builder /app/src/generated ./src/generated
COPY --from=builder /app/next.config.ts ./next.config.ts

# Change ownership to the nextjs user
RUN chown -R nextjs:nodejs /app
USER nextjs

# Expose the port the app runs on
EXPOSE 3000

# Command to run the application
CMD ["npm", "start"]